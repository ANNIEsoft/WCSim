# Vis Settings for ANNIE
/vis/viewer/zoom 2.4
/vis/viewer/set/viewpointThetaPhi 80 10 deg
#/vis/viewer/set/viewpointThetaPhi 90 0 deg
# angle at which to view a octagon face side-on 
#/vis/viewer/set/viewpointThetaPhi 112.5 0
/vis/viewer/set/upVector 0 1 0
/vis/viewer/panTo -2 0.8
# add visibility of the hidden parent structures
#/vis/geometry/set/visibility WCBarrelCell 0
#/vis/geometry/set/visibility WCBarrelCell 1
#/vis/geometry/set/visibility WCCapPolygon 1
#/vis/geometry/set/forceSolid ANNIEp2-glassFaceWCPMT -1 1
#/vis/geometry/set/forceSolid ANNIEp2-glassFaceWCONLYLAPPDS -1 1
#/vis/geometry/set/colour ANNIEp2-glassFaceWCPMT -1 1. 1. 1. .3
#/vis/viewer/zoom 2
#/vis/viewer/pan -1 0
